<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/');
} %>

<!-- Flash messages -->
<%- messages() %>

<% if (loggedIn) { %>
    <h2>Welcome, <%= user.account_firstname %>!</h2>

    <!-- Update Account Information Link -->
    <h3>Account Management</h3>
    <p><a href="/account/update/<%= user.account_id %>">Update Account Information</a></p>

    <% if (user.account_type === 'Employee' || user.account_type === 'Admin') { %>
        <h3>Inventory Management</h3>
        <p><a href="/inv/management">Manage Inventory</a></p>
    <% } %>

    <% if (user.account_type === 'Admin') { %>
        <h3>Inventory Approval Panel</h3>
        <p><a href="/inv/approval-panel">Pending Inventory Review</a></p>
    <% } %>
    
<% } else { %>
    <p>You are not logged in. Please <a href="/account/login">log in</a>.</p>
<% } %>
