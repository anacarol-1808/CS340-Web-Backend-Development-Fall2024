<!-- The Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- A Message Block     -->
<%- messages() %>

<!-- Login Form -->
<form id="loginForm" action="/account/login" method="post">
    <label for="email">Email:</label>
    <input type="email" id="email" name="account_email" required placeholder="Enter a valid email address" value="<%= locals.account_email %>">
    <label for="password"><br>Password:</label>
    <input type="password" id="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required title="There must be at least 12 characters, one must be a number, one must be a lowercase letter, one must be a capital letter, and one must be a non-alphanumeric character.">
    <br>
    <button type="submit" id="loginBtn">Login</button>
</form>

<p>Don't have an account? <a href="/account/register">Register here</a></p>